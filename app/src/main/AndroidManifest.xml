<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mohitmvvmfirebase">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MohitApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".updated.FireBaseLoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.mohitmvvmfirebase.ui.activity.signup.SignupActivity" />
        <activity android:name="net.simplifiedcoding.mohit.data.ui.home.HomeActivity" />
        <activity android:name=".ui.activity.storage.StorageActivity" />
        <activity android:name="com.example.mohit.ui.activity.post.add_post.PostActivity" />
        <activity android:name=".ui.activity.user_list.UserListActivity"/>
    </application>

</manifest>